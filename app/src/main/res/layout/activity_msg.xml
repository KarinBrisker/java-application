<RelativeLayout
    android:id="@+id/msg_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MsgActivity">

    <TextView
        android:id="@+id/textCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerInParent="true"
        android:text="hello"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


    <Button
        android:id="@+id/btnSkip"
        android:textSize="20dp"         android:textColor="#FF258dc8"
        android:layout_width="fill_parent" android:layout_marginTop="15dp"
        android:layout_height="wrap_content" android:background="@drawable/button"
        android:text="@string/skipbtn"/>



</RelativeLayout>